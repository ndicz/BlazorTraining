@page "/SAB00200"
@inject R_ILocalizer<SAB00100FrontResources.Resources_Dummy_Class> _localizer
@inherits R_Page

<R_StackLayout>
    <R_Grid @ref="@_gridRef200"
            DataSource="@EmployeeViewModel.EmployeeList"
            Pageable="true"
            R_ConductorGridSource="@_conGridCustomerRef"
            R_GridType="@R_eGridType.Original"
            AllowAddNewRow="true"
            AllowEditRow="true"
            AllowDeleteRow="true"
            R_ServiceGetListRecord="@Grid_R_ServiceGetListRecord">
        <R_GridColumns>
            <R_GridTextColumn FieldName="EmployeeID" HeaderText="Employee ID"></R_GridTextColumn>
            <R_GridTextColumn FieldName="FirstName" HeaderText="Company Name" R_EnableAdd R_EnableEdit></R_GridTextColumn>
            <R_GridTextColumn FieldName="LastName" HeaderText="Contact Name" R_EnableAdd R_EnableEdit></R_GridTextColumn>
        </R_GridColumns>
    </R_Grid>
</R_StackLayout>

<R_ConductorGrid @ref="@_conGridCustomerRef"
                 R_ViewModel="@EmployeeViewModel"
                 R_IsHeader
                 R_ServiceGetRecord="@Grid_ServiceGetRecord"
                 R_BeforeEdit="@Grid_BeforeEdit"
                 R_BeforeCancel="@Grid_BeforeCancel"
                 R_BeforeAdd="@Grid_BeforeAdd"
                 R_AfterAdd="@Grid_AfterAdd"
                 R_Validation="@Grid_Validation"
                 R_Saving="@Grid_Saving"
                 R_ServiceSave="@Grid_ServiceSave"
                 R_AfterSave="@Grid_AfterSave"
                 R_BeforeDelete="@Grid_BeforeDelete"
                 R_ServiceDelete="@Grid_ServiceDelete"
                 R_Display="@R_Display"
                 R_AfterDelete="@Grid_AfterDelete"></R_ConductorGrid>